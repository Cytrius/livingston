{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "paths" : {
    "*" : ["*"],
    "@app/*" : ["./resources/angular/*"]
  },
  "include": [
    "packages/**/resources/angular/*"
  ],
  "exclude": [
    "node_modules"
  ]
}